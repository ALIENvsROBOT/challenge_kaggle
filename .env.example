# MedGemma Configuration

# --- AI Model Settings ---
medGemma_endpoint="http://host.docker.internal:8000/v1" # Use internal docker host for vLLM
medGemma_api_key="your-vllm-key-here"
medGemma_model="google/medgemma-1.5-4b-it"

# --- Extraction Rules ---
medGemma_strict_extraction="1"      # Force high compliance validation
medGemma_allow_report_date="1"      # Extract dates if found
medGemma_image_retry_limit="2"      # How many times to re-send image on failure

# --- Database (PostgreSQL) ---
POSTGRES_USER=medgemma_user
POSTGRES_PASSWORD=secure_password_changeme
POSTGRES_DB=medgemma_records
POSTGRES_HOST=db
POSTGRES_PORT=5432

# --- Frontend ---
VITE_API_URL=http://localhost:8000  # Public URL of the backend API
