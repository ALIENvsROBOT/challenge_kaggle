FROM python:3.12-slim

WORKDIR /app

# Install uv for fast package management
COPY --from=ghcr.io/astral-sh/uv:latest /uv /bin/uv

# Copy dependency definition
COPY pyproject.toml ./

# Install dependencies (including dev deps if configured)
RUN uv sync --no-cache

# Copy Application Code
COPY . .

# Environment variables
ENV PATH="/app/.venv/bin:$PATH"
ENV PYTHONPATH="/app"

# Command is overridden by docker-compose for hot-reload
CMD ["uv", "run", "uvicorn", "Python_Scripts.api:app", "--host", "0.0.0.0", "--port", "8000", "--reload"]
